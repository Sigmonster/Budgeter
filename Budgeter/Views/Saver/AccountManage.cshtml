@using Budgeter.Models
@model AccountManageVM

@{
    ViewBag.Title = "Account Manage";
    if (Model != null)
    {
     
    }
}


<div class="container container-HouseholdAccounts col-xs-12">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-wrapper collapse in p-b-20">
                    <div class="col-md-4">
                        <div class="col-xs-10 center-block">
                            <h3>Select Account to Manage.</h3>
                            @using (Html.BeginForm("AccountManage", "Saver", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-md-12">
                                        @Html.DropDownList("Accounts", null, "Select an Account", htmlAttributes: new { @class = "form-control accountsList" })
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div class="row">
                                    <div class="pull-right">
                                        <input type="submit" value="Submit" class="fcbtn btn btn-outline btn-success btn-1d" />
                                    </div>
                                </div>


                            }
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-footer">
                    <div class="text-center">
                         @if (Model.Account != null)
                         {
                        <h2>Account Name: @Model.Account.Name</h2>
                         }
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Account != null)
        {
            <div class="col-md-4 col-xs-12">
                <div class="panel panel-default" id="Account-AddTransaction-Wrapper">
                    <div class="panel-heading">
                        <div class="text-center">
                            <h3>Add Transaction</h3>
                        </div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        @Html.Partial("_AddTransactionPartial", Model.Transaction)
                    </div>
                    <div class="panel-footer"></div>
                </div>
            </div>
            <div class="col-md-8 col-xs-12">
                <div class="panel panel-default" id="Account-Transactions-Wrapper">
                    <div class="panel-heading">
                        <div class="row">
                            <h4><b>Available Balance: </b>@Model.Account.Balance &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Reconciled Balance: </b>@Model.Account.ReconciledBalance</h4>
                        </div>
                        <div class="row text-center">
                            Transactions
                        </div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        @Html.Partial("_DisplayTransactionsPartial", Model.Account.Transactions.ToList())
                    </div>
                    <div class="panel-footer"></div>
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                <div class="panel panel-default">
                </div>
            </div>
        }
    </div>
