@using Budgeter.Models
@model List<BudgetItem>

<div class="col-md-8 col-xs-12">
    <div class="panel panel-default" id="Account-Transactions-Wrapper">
        <div class="panel-heading">
            <div class="row text-center">
                @ViewBag.BudgetsListTitle
            </div>
        </div>
        <div class="panel-wrapper collapse in">

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="ticket-tbl-row">
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Category</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody class="" id="disp-budgets-body">
                        @foreach (var item in Model)
                        {
                            <tr class="budget-row-@item.IsActive">
                                <td>@item.Name</td>
                                <td>@item.Amount</td>
                                <td>@item.Category.Name</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <a title="" id="transactionDropdown-@item.Id" tabindex="0" data-placement="auto bottom" data-toggle="popover" data-trigger="focus" class="btn btn-default btn-outline waves-effect waves-light budget-options" data-content='<ul role="menu" class="dropdown-menu" style="display:inline;"><li><a class="" href="javascript:editBudgetBtn(@item.Id)">Edit Transaction</a></li><li><h5 class="text-center"><b>-Mark Budget-</b></h5></li><li><a class="btn btn-info" href="javascript:deleteBudgetBtn(@item.Id,false)">Delete</a></li></ul><br/>' data-html="true"><i class="fa fa-gear m-r-5"></i></a>
                                        
                                    }
                                    else
                                    {
                                        <a class="btn btn-info" href="javascript:deleteBudgetBtn(@item.Id,true)">Set As Active</a>
                                    }
                                    @*<a class="voidBTN" id="@item.Id" data-value="true" onclick="voidBtn(@item.Id,'true')">Void</a>*@
                                    @*<a class="voidBTN" href="javascript:voidBtn(@item.Id,false)">Undo-Void</a>*@
                                    @*<a class="" href="javascript:editTransactionBtn(@item.Id)">Edit</a>*@
                                    @*<a class="processedBTN" href="javascript:processedBtn(@item.Id,true)">Processed</a>*@
                                    @*<a class="processedBTN" href="javascript:processedBtn(@item.Id,false)">Pending</a>*@
                                    @*<a class="" href="javascript:deleteBtn(@item.Id,false)">Delete</a>*@
                                    <div id="absolute-container"></div>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
        <div class="panel-footer"></div>
    </div>
</div>
<div class="col-md-4 col-xs-12">
    <div class="panel panel-default">
    </div>
</div>

<script>
        $(function () {
            //Transaction Options
            $('.budget-options').popover({ html: true, container: '#disp-budgets-body', trigger: "click" });

        });
</script>
