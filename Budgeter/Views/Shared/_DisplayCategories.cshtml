@using Budgeter.Models
@model List<Category>

<div class="col-md-8 col-xs-12">
    <div class="panel panel-default" id="Account-Transactions-Wrapper">
        <div class="panel-heading">
            <div class="row text-center">
                <h3> @ViewBag.CategoriesListTitle</h3>
            </div>
        </div>
        <div class="panel-wrapper collapse in">
            <div class="table-responsive">
                <table class="table table-striped table-hover myTablez">
                    <thead>
                        <tr class="ticket-tbl-row">
                            <th>Name</th>
                            <th>Status</th>
                            <th>Type</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody class="" id="disp-categories-body">
                        @foreach (var item in Model)
                        {
                            <tr class="category-row-@item.Id categoryActive-@item.IsActive.ToString()">
                                <td>@item.Name</td>
                                <td>
                                    @if (@item.IsActive)
                                    {
                                        <span class="text-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @if (@item.IsDefault)
                                    {
                                        <span class="text-muted">System Default</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">User Created</span>
                                    }
                                </td>
                                <td>
                                    @*@if (item.IsActive)
                                    {*@
                                        <a title="" id="categoryDropdown-@item.Id" tabindex="0" data-placement="auto bottom" data-toggle="popover" data-trigger="focus" class="btn btn-default btn-outline waves-effect waves-light category-options" data-content='<ul role="menu" class="dropdown-menu" style="display:inline;"><li><a href="javascript:editCategoryBtn(@item.Id)">Edit Category</a></li><li><h5 class="text-center"><b>-Mark Category-</b></h5></li><li><a href="javascript:toggleCategoryStatusBtn(@item.Id,false)">Inactive</a></li><li><a href="javascript:toggleCategoryStatusBtn(@item.Id,true)">Active</a></li></ul><br/>' data-html="true"><i class="fa fa-gear m-r-5"></i></a>
                                    @*}
                                    else
                                    {
                                        <a class="btn btn-info" href="javascript:deleteBudgetBtn(@item.Id,true)">Set As Active</a>
                                    }*@
                                    @*<a class="voidBTN" id="@item.Id" data-value="true" onclick="voidBtn(@item.Id,'true')">Void</a>*@
                                    @*<a class="voidBTN" href="javascript:voidBtn(@item.Id,false)">Undo-Void</a>*@
                                    @*<a class="" href="javascript:editTransactionBtn(@item.Id)">Edit</a>*@
                                    @*<a class="processedBTN" href="javascript:processedBtn(@item.Id,true)">Processed</a>*@
                                    @*<a class="processedBTN" href="javascript:processedBtn(@item.Id,false)">Pending</a>*@
                                    @*<a class="" href="javascript:deleteBtn(@item.Id,false)">Delete</a>*@
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>

        <div class="panel-footer" id="disCategoriesFooter-PopoverContainer"></div>
    </div>
</div>
<div class="col-md-4 col-xs-12">
    <div class="panel panel-default">
    </div>
</div>

<script>
        $(function () {
            //Transaction Options
            $('.category-options').popover({ html: true, container: '#disCategoriesFooter-PopoverContainer', trigger: "focus" });

        });
        $(document).ready(function () {
            /*Stand DataTable*/
            var table = $('.myTablez').DataTable({
                "order": []//Disable Initial Sort
            });
        });
</script>

