}

@*@Html.Partial("_AddTransactionPartial", Model.Transaction)*@

    <div class="col-md-8 col-xs-12">
        <div class="panel panel-default" id="Account-Transactions-Wrapper">
            <div class="panel-heading">
                <div class="row text-center">
                    @ViewBag.TransactionsListTitle
                </div>
            </div>
            <div class="panel-wrapper collapse in">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="ticket-tbl-row">
                                <th>Date</th>
                                <th>EnteredBy</th>
                                <th>Category</th>
                                <th>Processed</th>
                                <th>Description</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody class="" id="disp-transactions-body">
                            @foreach (var item in Model)
                            {
                                <tr class="voided-@item.IsVoid.ToString()">
                                    <td>@item.Date.ToString("M/dd/yy")</td>
                                    <td>@item.EnteredBy.DisplayName</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        @if (item.IsReconciled == true)
                                        {
                                            @:Processed
                                    }
                                        @if (item.IsReconciled == false)
                                        {
                                            @:Pending
                                    }
                                    </td>
                                    <td>@item.Description</td>
                                    <td class="isExpense-@item.IsExpense.ToString()">
                                        @if (item.IsExpense == true)
                                        {
                                            @:(
                                            @(item.Amount * -1)@:)
                                    }
                                        @if (item.IsExpense == false)
                                        {

                                            @item.Amount
                                        }
                                    </td>
                                    <td>
                                        @{
                                            //TODO:Fix forms for button clicks, xEdit(modal), xDelete(display inactive transactions in another tab), xVoid, xIsReconciled/Processed, Go to. All only reload Partial Views with AJAX.
                                        }
                                        @{
                                            //TODO:Import CSV Transactions, Stored Procedures
                                        }
                                        @if (item.IsActive)
                                        {
                                        <a title="" id="transactionDropdown-@item.Id" tabindex="0" data-placement="auto bottom" data-toggle="popover" data-trigger="focus" class="btn btn-default btn-outline waves-effect waves-light transaction-options" data-content='<ul role="menu" class="dropdown-menu" style="display:inline;"><li><a class="" href="javascript:editTransactionBtn(@item.Id)">Edit Transaction</a></li><li><h5 class="text-center"><b>-Mark Transaction-</b></h5></li><li><a class="voidBTN" href="javascript:voidBtn(@item.Id,true)">Void</a></li><li><a class="voidBTN" href="javascript:voidBtn(@item.Id,false)">Not-Void</a></li><li><a class="processedBTN" href="javascript:processedBtn(@item.Id,true)">Processed</a></li><li><a class="processedBTN" href="javascript:processedBtn(@item.Id,false)">Pending</a></li><li><a class="" href="javascript:deleteBtn(@item.Id,false)">Delete</a></li></ul><br/>' data-html="true"><i class="fa fa-gear m-r-5"></i></a>
                                        }
                                        else
                                        {
                                       <a class="btn btn-info" href="javascript:deleteBtn(@item.Id,true)">Set As Active</a>
                                        }
                                        @*<a class="voidBTN" id="@item.Id" data-value="true" onclick="voidBtn(@item.Id,'true')">Void</a>*@
                                        @*<a class="voidBTN" href="javascript:voidBtn(@item.Id,false)">Undo-Void</a>*@
                                        @*<a class="" href="javascript:editTransactionBtn(@item.Id)">Edit</a>*@
                                        @*<a class="processedBTN" href="javascript:processedBtn(@item.Id,true)">Processed</a>*@
                                        @*<a class="processedBTN" href="javascript:processedBtn(@item.Id,false)">Pending</a>*@
                                        @*<a class="" href="javascript:deleteBtn(@item.Id,false)">Delete</a>*@
                                    </td>
                                </tr>

                                            }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
            <div class="panel-footer"></div>
        </div>
    </div>
    <div class="col-md-4 col-xs-12">
        <div class="panel panel-default">
        </div>
    </div>

