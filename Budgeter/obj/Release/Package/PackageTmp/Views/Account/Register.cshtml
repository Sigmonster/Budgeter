@using Budgeter.Models
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Template/plugins/images/favicon.png">
    <!-- Bootstrap Core CSS -->
    <link href="~/Template/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- animation CSS -->
    <link href="~/Template/css/animate.css" rel="stylesheet">
    <link href="~/Template/plugins/bower_components/sweetalert/sweetalert.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Template/css/style.css" rel="stylesheet">
    <link href="~/Template/css/AJStyles.css" rel="stylesheet" />
    <!-- color CSS -->
    <link href="~/Template/css/colors/blue.css" id="theme" rel="stylesheet">
</head>
<body>
    <section id="wrapper" class="login-register">
        <div id="particles-js">
        </div>

        <div class="login-box">
            <div class="login-title text-center">
                <h2 style="color:white;">Universal Saver</h2>
            </div>
            <div class="white-box">
                <p class="text-danger">@ViewBag.ErrorMsg</p>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "registerformpage" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <h3 class="box-title m-b-20">Sign Up for a New Account!</h3>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group m-t-20">
                        <div class="col-xs-6">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                        </div>
                        <div class="col-xs-6">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <div class="checkbox checkbox-primary p-t-0">
                                <p><b>Note -</b> An Admin must add a project to your account before you can view projects/tickets.</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" form="registerform" type="submit">Sign Up</button>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>
                                Already have an account? <a href="/Account/Login" id="to-login-from-register" class="text-dark text-primary m-l-5 pull-right"><i class="fa fa-arrow-left m-r-5"></i> Back to login.</a>
                            </p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>

    <!-- jQuery -->
    <script src="~/Template/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Template/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="~/Template/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>

    <!--slimscroll JavaScript -->
    <script src="~/Template/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Template/js/waves.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Template/js/custom.js"></script>
    <!--Style Switcher -->
    <script src="~/Template/plugins/bower_components/styleswitcher/jQuery.style.switcher.js"></script>
    <script src="~/Template/js/particles.js"></script>
    <script src="~/Template/js/app.js"></script>

</body>
