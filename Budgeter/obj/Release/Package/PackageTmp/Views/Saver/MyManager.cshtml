@using Budgeter.Models
@model AccountFetchVM

@{
    ViewBag.Title = "BudgetManage";
}
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-wrapper collapse in">
                <div class="col-md-10 center-block">
                    <div class="row">
                        <div class="row">
                            <div class="text-center">
                                <h3>MyManager Options</h3>
                            </div>
                            <br />
                            <div class="btngroup-manage col-xs-11 center-block">
                                <div class="col-md-3 col-xs-6">
                                    <a href="javascript:FetchCategoryViews()" class="btn btn-success btn-block"><span>Categories</span></a>
                                </div>
                                <div class="col-md-3 col-xs-6">
                                    <a href="javascript:FetchBudgetViews()" class="btn btn-success btn-block"><span>Budgets</span></a>
                                </div>
                                <div class="col-md-3 col-xs-6">
                                    <a href="javascript:GetTransactionsView()" class="btn btn-info btn-block"><span>Transactions</span></a>
                                </div>
                                <div class="col-md-3 col-xs-6">
                                    <a href="javascript:FetchAccountsView()" class="btn btn-info btn-block"><span>Accounts</span></a>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <br />
                            <hr />
                            <br />
                        </div>
                        <div class="row">

                            <div class="manage-head" id="categories-head">
                                <div class="text-center">
                                    <h3 style="font-weight: normal;">Categories Manager</h3>
                                </div>
                                <br />
                                <br />
                                <div class="clearfix"></div>
                            </div>

                            <div class="manage-head" id="budgets-head">
                                <div class="row">
                                    <div class="text-center">
                                        <h3 style="font-weight: normal;">Budgets Manager</h3>
                                    </div>
                                    <div class="btngroup-manage col-xs-11 col-md-6 center-block">
                                        <div class="col-md-6 col-xs-12 m-t-10">
                                            <a href="javascript:GetActiveBudgetsPartial()" class="btn btn-success btn-block sticon ti-money"><span>Active Budgets</span></a>
                                        </div>
                                        <div class="col-md-6 col-xs-12 m-t-10">
                                            <a href="javascript:GetInactiveBudgetsPartial()" class="btn btn-info btn-block sticon ti-trash"><span>Archived Budgets</span></a>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <br />
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                            <div class="manage-head" id="transactions-head">
                                <div class="row">
                                    <div class="col-xs-11 center-block">
                                        <div class="text-center">
                                            <h3 style="font-weight: normal;">Transactions Manager</h3>
                                        </div>
                                        @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "form-horizontal", role = "form", action = "javascript:submitGetAccountForm()", id = "AccountManageForm" }))
                                        {
                                            <div class="col-xs-8 col-md-4 col-md-offset-3">
                                                @Html.DropDownList("Accounts", null, "Select an Account", htmlAttributes: new { @class = "form-control accountsList", required = "" })
                                            </div>
                                            <div class="col-xs-2">
                                                <input type="submit" value="Submit" class="fcbtn btn btn-outline btn-success btn-1d" />
                                            </div>
                                            <div id="ajax-Accounts-loader" style=""><div class="row text-center"><i class="fa fa-spinner fa-spin fa-3x fa-fw"></i></div> <div class="row">Fetching Results...</div></div>
                                        }
                                        <div class="clearfix"></div>
                                        <br />
                                    </div>
                                </div>
                                <div id="accountManageHeadWrapper"></div>
                            </div>

                            <div class="manage-head" id="accounts-head">
                                <div class="row">
                                    <div class="text-center">
                                        <h3 style="font-weight: normal;">Accounts Manager</h3>
                                    </div>
                                </div>
                                <div class="row p-b-20">
                                    <div class="btngroup-manage col-xs-11 col-md-6 center-block">
                                        <div class="col-md-6 col-xs-12 m-t-10">
                                            <a href="javascript:GetAccountsListPartial()" class="btn btn-success btn-block sticon ti-money"><span>ACTIVE ACCOUNTS</span></a>
                                        </div>
                                        <div class="col-md-6 col-xs-12 m-t-10">
                                            <a href="javascript:GetInactiveAccountsListPartial()" class="btn btn-info btn-block sticon ti-trash"><span>ARCHIVED ACCOUNTS</span></a>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Hidden Edit Transaction Modal*@
    <div id="editModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="editModal-title">Fix .HTML to insert title.</h4>
                </div>
                <div class="modal-body" id="editModal-Body">

                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div id="managePartialsContainer-Wrapper">
        
        <div id="createFormPartialWrapper">
        </div>
        <div id="dataListPartialWrapper">
        </div>
    </div>
<div class="popover-info-container" id="popover-hover-container"></div>
