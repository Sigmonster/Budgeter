}

<div class="col-xs-12">
    <div class="panel panel-default" id="Account-AddTransaction-Wrapper">
        <div class="panel-wrapper collapse in">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editCategoryForm", action = "javascript:submitEditCategoryForm()" }))
            {
                @Html.HiddenFor(x=>x.Id)
                @Html.AntiForgeryToken()
                <br />
                <br />
                <div class="form-horizontal">
                    <div class="form-group col-xs-11 center-block">
                        <label class="control-label col-md-4" for="Name">Category Name</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                </div>
            }
        </div>
    </div>
</div>

