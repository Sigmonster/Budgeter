@using Budgeter.Models
@model Account
@{

}


<div class="col-md-12 col-xs-12">
    <div id="Account-Transactions-Wrapper">

        <div class="row text-center">
            <div class="text-center">
                <h3>Account: @Model.Name</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="row">
            <div class="btngroup-manage col-xs-11 col-md-6 center-block">
                <div class="col-md-6 col-xs-12 m-t-10">
                    <a href="javascript:activeTransactions(@Model.Id)" class="btn btn-success btn-block sticon ti-money"><span>Active Transactions</span></a>
                </div>
                <div class="col-md-6 col-xs-12 m-t-10">
                    <a href="javascript:archivedTransactions(@Model.Id)" class="btn btn-info btn-block sticon ti-trash"><span>Archived Transactions</span></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="text-center">
                <input type="number" id="current-acc-num" style="display:none;" value="@Model.Id" />
                <br />
                <div id="display-account-balances">
                    <div class="col-md-6">
                        <h4><b>Available Balance: </b><span>@Model.Balance</span></h4>
                        <input type="number" id="AccBalance" style="display:none;" value="@Model.Balance" />
                    </div>
                    <div class="col-md-6">
                        <h4><b>Reconciled Balance: </b><span>@Model.ReconciledBalance</span></h4>
                        <input type="number" id="RecBalance" style="display:none;" value="@Model.ReconciledBalance" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


